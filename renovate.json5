{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "ollegz"
  ],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeSchedule": [
        "every hour"],
      "lockFileMaintenance": {
        "enabled": true,
        "recreateWhen": "always",
        "rebaseStalePrs": true,
        "branchTopic": "lock-file-maintenance",
        "commitMessageAction": "Lock file maintenance",
        "prBodyDefinitions": {"Change": "All locks refreshed"}
      },
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeSchedule": [
        "every hour"],
      "lockFileMaintenance": {
        "enabled": true,
        "recreateWhen": "always",
        "rebaseStalePrs": true,
        "branchTopic": "lock-file-maintenance",
        "commitMessageAction": "Lock file maintenance",
        "prBodyDefinitions": {"Change": "All locks refreshed"}
      }
    },
    {
      "description": "Disables the creation of branches/PRs for any minor/patch updates etc. of Renovate bot",
      "matchPaths": [
        "renovate-update-notification/Dockerfile"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest",
        "rollback"
      ],
      "automerge": true,
      "automergeSchedule": [
        "every hour"]
    },
    {
      "description": "Causes the bot to create a PR (and thus, an email notification), whenever there is a new major Renovate version",
      "matchPaths": [
        "renovate-update-notification/Dockerfile"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "automerge": false
      // just re-states the default and ensures that PRs are really created - you can remove this line
      // if you did not change "prCreation" elsewhere to some non-default value
      "prCreation": "immediate",
    },
  ],
  "schedule": [
    "after 10am every weekday",
    "before 5pm every weekday",
    "every weekend"
  ],
  "timezone": "Europe/Stockholm",
  "platformAutomerge": true,
  "rebaseWhen": "behind-base-branch",
  "rollbackPrs": true,
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "dependencyDashboardAutoclose": true,
}
